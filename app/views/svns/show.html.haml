- title 'Repository Manager - Detail'

%section#svn-show
  .container{:style => "margin-top: 40px; padding-top: 10px"}
    .pageContent
      .show-svn
        .container
          .content
            .row
              .span12.offset2
                %h1
                  = params[:id]
                %table{:class => 'condensed-table bordered-table zebra-striped'}
                  %thead
                    %tr
                      %th{:style => 'style="width: 150px;'}
                        項目
                      %th
                        内容
                  %tbody
                    %tr
                      %td
                        ディレクトリ
                      %td
                        = "#{RailsApp::Application.config.svn_dir}/#{params[:id]}"
                    %tr
                      %td
                        リポジトリ
                      %td
                        = link_to 'http://' + RailsApp::Application.config.hostname + '/svn/' + params[:id], "/svn/" + params[:id]
                    %tr
                      %td
                        最終更新日
                      %td
                        = File::stat(RailsApp::Application.config.svn_dir + "/" + params[:id] + "/db/current").mtime

                .actions
                  = link_to '一覧へ戻る', repos_path, :class => 'btn small'
                  = link_to 'このリポジトリを削除する', params[:id], :data => { :confirm => '本当に削除しますか' }, :method => :delete, :class => 'btn small danger'

